.login-page {
  padding: 0 54rpx 0 56rpx;
  min-height: 100vh;
  background-color: #fff;
}
.login-page .login-content {
  margin-top: 176rpx;
}
.login-page .text.title {
  line-height: 68rpx;
}
.login-page .form-input {
  align-items: center;
  width: 640rpx;
  height: 112rpx;
  padding: 24rpx;
  box-shadow: 0 0 0 2rpx #e0e6f1 inset;
  border-radius: 16rpx;
}
.login-page .divide-line {
  width: 2rpx;
  height: 24rpx;
  background: #000;
}
.login-page .login-btn {
  width: 640rpx;
  height: 88rpx;
  border-radius: 44rpx;
  background-color: #30a375;
  color: #fff;
}
.login-page .login-btn.disabled {
  opacity: 0.5;
}
.login-page .agreement-content {
  position: fixed;
  left: 136rpx;
  bottom: 116rpx;
}
.login-page .forbiden-content {
  margin-top: 240rpx;
}
.login-page .description-content {
  position: relative;
  padding-top: 80rpx;
  line-height: 1;
}
.login-page .description-content:before {
  position: absolute;
  top: 0;
  display: block;
  content: "";
  width: 100%;
  height: 2rpx;
  background-color: #e0e6f1;
}
.login-page .description-content .text {
  display: inline;
}
.login-page .description-content .divide-gap {
  height: 40rpx;
}
.login-page .code-image {
  width: 200rpx;
}
