.service-edit-page {
  padding: 24rpx 32rpx 200rpx 32rpx;
  min-height: 100vh;
  background-color: #f4f6f9;
}
.service-edit-page .user-content,
.service-edit-page .certificate-content,
.service-edit-page .poster-content {
  background-color: #fff;
  border-radius: 24rpx;
  padding: 16rpx 24rpx 32rpx 24rpx;
}
.service-edit-page .certificate-content {
  padding-bottom: 24rpx;
}
.service-edit-page .poster-content {
  padding-top: 36rpx;
  padding-bottom: 24rpx;
}
.service-edit-page .form-input {
  height: 96rpx;
}
.service-edit-page .form-input input {
  text-align: right;
}
.service-edit-page .switch-content {
  height: 72rpx;
  padding: 0 16rpx;
  border-radius: 16rpx;
  background-color: #f9f9f9;
}
.service-edit-page .upload-btn {
  position: relative;
  flex: none;
  width: 176rpx;
  height: 176rpx;
  border-radius: 16rpx;
  border: 2rpx solid #e0e6f1;
  margin-left: auto;
  overflow: hidden;
}
.service-edit-page .delete-btn {
  position: absolute;
  right: 10rpx;
  bottom: 10rpx;
}
.service-edit-page .tabbar-content {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 16rpx 32rpx env(safe-area-inset-bottom) 32rpx;
}
.service-edit-page .save-btn {
  width: 686rpx;
  height: 88rpx;
  background-color: #30a375;
  border-radius: 44rpx;
}
