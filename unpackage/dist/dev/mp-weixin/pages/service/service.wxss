.service-page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f4f6f9;
}
.service-page .code-content {
  flex: 1;
  position: relative;
  margin: 0 64rpx;
  border-radius: 32rpx;
  overflow: hidden;
}
.service-page .service-code {
  position: absolute;
  right: 40rpx;
  bottom: 30rpx;
  border-radius: 6rpx;
}
.service-page .poster-image {
  width: 622rpx;
}
.service-page .code-image {
  width: 512rpx;
}
.service-page .tabbar-content {
  flex: none;
  height: 88rpx;
  padding: 0 32rpx;
  margin-top: 88rpx;
  background-color: #f4f6f9;
}
.service-page .edit-btn,
.service-page .save-btn {
  width: 334rpx;
  height: 88rpx;
  border-radius: 44rpx;
}
.service-page .edit-btn {
  box-shadow: 0 0 0 2rpx #30a375 inset;
}
.service-page .save-btn {
  background-color: #30a375;
}
