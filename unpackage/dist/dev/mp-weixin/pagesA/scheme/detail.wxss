.scheme-detail-page {
  min-height: 100vh;
  padding: 60rpx 32rpx env(safe-area-inset-bottom) 32rpx;
}
.scheme-detail-page .scheme-content {
  padding-bottom: 40rpx;
  border-bottom: 2rpx dashed #88888a;
}
.scheme-detail-page .text.scheme-title {
  line-height: 68rpx;
}
.scheme-detail-page .table {
  border: 2rpx solid #e0e6f1;
  border-radius: 8rpx;
}
.scheme-detail-page .table .tr {
  border-bottom: 2rpx solid #e0e6f1;
}
.scheme-detail-page .table .tr:last-child {
  border-bottom: none;
}
.scheme-detail-page .table .td {
  width: 526rpx;
  padding: 16rpx 24rpx;
  border-left: 2rpx solid #e0e6f1;
}
.scheme-detail-page .table .td:first-child {
  width: 160rpx;
  border-left: none;
}
.scheme-detail-page .chart-content {
  position: relative;
  width: 686rpx;
  height: 680rpx;
  border-radius: 24rpx;
  background-color: #f9f9f9;
  overflow: hidden;
}
.scheme-detail-page .chart-content .icon {
  position: absolute;
}
.scheme-detail-page .pie-legend {
  position: absolute;
  top: 204rpx;
  left: 360rpx;
  z-index: 9999;
}
.scheme-detail-page .pie-legend .dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
}
.scheme-detail-page .pie-legend .primary-dot {
  background-color: #30a375;
}
.scheme-detail-page .pie-legend .accent-dot {
  background-color: #4ef08c;
}
.scheme-detail-page .pie-legend .warning-dot {
  background-color: #ff8b39;
}
.scheme-detail-page .chart-tab,
.scheme-detail-page .chart-title {
  position: absolute;
  left: 0;
  right: 0;
  margin: 0 auto;
  z-index: 9999;
}
.scheme-detail-page .chart-tab {
  top: 40rpx;
}
.scheme-detail-page .chart-title {
  bottom: 20rpx;
  text-align: center;
  opacity: 0.8;
}
