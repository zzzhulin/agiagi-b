.scheme-page {
  min-height: 100vh;
  background-color: #f4f6f9;
  padding-bottom: 202rpx;
}
.scheme-page .user-content {
  padding: 52rpx 32rpx 40rpx 32rpx;
}
.scheme-page .user-info {
  flex: 1;
}
.scheme-page .user-avatar {
  flex: none;
}
.scheme-page .scheme-container {
  background-color: #fff;
  border-radius: 32rpx;
  padding: 48rpx 32rpx;
}
.scheme-page .form-input {
  padding: 24rpx 24rpx 14rpx 24rpx;
  box-shadow: 0 0 0 2rpx #e0e6f1 inset;
  border-radius: 16rpx;
}
.scheme-page .form-input textarea {
  width: 100%;
  min-height: 144rpx;
}
.scheme-page .confirm-btn {
  width: 120rpx;
  height: 48rpx;
  border-radius: 44rpx;
  margin-left: auto;
  background-color: #30a375;
}
.scheme-page .table {
  border: 2rpx solid #e0e6f1;
  border-radius: 8rpx;
}
.scheme-page .table .tr {
  border-bottom: 2rpx solid #e0e6f1;
}
.scheme-page .table .tr:last-child {
  border-bottom: none;
}
.scheme-page .table .td {
  width: 526rpx;
  padding: 16rpx 24rpx;
  border-left: 2rpx solid #e0e6f1;
}
.scheme-page .table .td:first-child {
  width: 162rpx;
  border-left: none;
}
.scheme-page .table .meal-text.text {
  white-space: break-spaces;
  line-height: 44rpx;
}
.scheme-page .tabbar-content {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 16rpx 32rpx env(safe-area-inset-bottom) 32rpx;
  background-color: #f4f6f9;
}
.scheme-page .adjust-btn,
.scheme-page .push-btn {
  width: 334rpx;
  height: 88rpx;
  border-radius: 44rpx;
}
.scheme-page .adjust-btn {
  box-shadow: 0 0 0 2rpx #30a375 inset;
}
.scheme-page .push-btn {
  background-color: #30a375;
}
