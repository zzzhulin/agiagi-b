.cookbook-detail-page {
  padding: 32rpx 32rpx 226rpx 32rpx;
}
.cookbook-detail-page .point-content {
  padding: 24rpx;
  border-radius: 16rpx;
  background-color: #f9f9f9;
  margin-bottom: 52rpx;
}
.cookbook-detail-page .table {
  border: 2rpx solid #e0e6f1;
  border-radius: 8rpx;
}
.cookbook-detail-page .table .tr {
  border-bottom: 2rpx solid #e0e6f1;
}
.cookbook-detail-page .table .tr:last-child {
  border-bottom: none;
}
.cookbook-detail-page .table .td {
  width: 526rpx;
  padding: 16rpx 24rpx;
  border-left: 2rpx solid #e0e6f1;
}
.cookbook-detail-page .table .td:first-child {
  width: 162rpx;
  border-left: none;
}
.cookbook-detail-page .table .meal-text.text {
  white-space: break-spaces;
  line-height: 44rpx;
}
.cookbook-detail-page .tabbar-content {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 16rpx 32rpx env(safe-area-inset-bottom) 32rpx;
}
.cookbook-detail-page .use-btn {
  width: 686rpx;
  height: 88rpx;
  background-color: #30a375;
  border-radius: 44rpx;
}
