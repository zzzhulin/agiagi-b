.customer-page {
  min-height: 100vh;
  background-color: #f4f6f9;
  padding-bottom: 200rpx;
}
.customer-page .family-btn {
  position: absolute;
  top: 16rpx;
  right: 0;
}
.customer-page .customer-content {
  position: relative;
  margin: 40rpx;
}
.customer-page .customer-container {
  padding: 0 32rpx;
}
.customer-page .card-content {
  padding: 28rpx 24rpx;
  border-radius: 24rpx;
  background: linear-gradient(180deg, #f6fefb 0%, #ffffff 100%);
}
.customer-page .target-content {
  position: relative;
  padding: 32rpx 24rpx;
  background-color: #ffffff;
  border-radius: 24rpx;
}
.customer-page .text.target-name {
  line-height: 68rpx;
}
.customer-page .clock-day {
  position: absolute;
  top: 92rpx;
  right: 24rpx;
}
.customer-page .target-info {
  flex: 1;
  height: 128rpx;
  padding: 16rpx 24rpx 14rpx 24rpx;
  background-color: #f9f9f9;
  border-radius: 16rpx;
}
.customer-page .scheme-content {
  background-color: #ffffff;
  border-radius: 24rpx;
}
.customer-page .scheme-info {
  padding: 34rpx 24rpx;
  height: 112rpx;
  border-bottom: 2rpx solid #f4f6f9;
}
.customer-page .scheme-info:last-child {
  border-bottom: none;
}
.customer-page .service-content {
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 34rpx 24rpx;
}
.customer-page .test-content {
  background-color: #ffffff;
  padding: 24rpx;
  border-radius: 24rpx;
}
.customer-page .test-item {
  padding: 0 16rpx 0 24rpx;
  height: 80rpx;
  background-color: #f9f9f9;
  border-radius: 16rpx;
}
.customer-page .test-name {
  flex: 1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.customer-page .tabbar-content {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 16rpx 32rpx env(safe-area-inset-bottom) 32rpx;
  background-color: #f4f6f9;
}
.customer-page .scheme-btn,
.customer-page .update-btn {
  width: 334rpx;
  height: 88rpx;
  border-radius: 44rpx;
}
.customer-page .scheme-btn {
  box-shadow: 0 0 0 2rpx #30a375 inset;
}
.customer-page .update-btn {
  background-color: #30a375;
}
.customer-page .popup-content {
  width: 588rpx;
  height: 380rpx;
  padding: 40rpx;
  border-radius: 32rpx;
  background-color: #fff;
}
.customer-page .popup-content .form-input {
  height: 96rpx;
  border-radius: 16rpx;
  box-shadow: 0 0 0 2rpx #88888a inset;
  padding: 24rpx 24rpx 22rpx 32rpx;
}
.customer-page .popup-content .placeholder {
  font-size: 36rpx;
}
.customer-page .popup-content .cancel-btn,
.customer-page .popup-content .save-btn {
  width: 240rpx;
  height: 88rpx;
  border-radius: 44rpx;
}
.customer-page .popup-content .cancel-btn {
  background-color: #f4f6f9;
}
.customer-page .popup-content .save-btn {
  background-color: #30a375;
}
