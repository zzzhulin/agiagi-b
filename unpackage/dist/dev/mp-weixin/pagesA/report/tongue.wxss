.tongue-result-page {
  min-height: 100vh;
  padding: 32rpx 32rpx 128rpx 32rpx;
  background-color: #fff;
}
.tongue-result-page .tongue-image {
  width: 212rpx;
  height: 212rpx;
  border-radius: 16rpx;
}
.tongue-result-page .tips-content {
  margin: 42rpx 0 28rpx 0;
  padding: 22rpx 24rpx;
  border-radius: 16rpx;
  background-color: #e3ffee;
}
.tongue-result-page .result-content {
  margin-bottom: 32rpx;
  padding: 32rpx 24rpx;
  border-radius: 24rpx;
  background-color: #f9f9f9;
}
.tongue-result-page .result-item .text {
  display: inline;
}
.tongue-result-page .checkbox {
  flex: none;
}
.tongue-result-page .description-item {
  min-height: 136rpx;
}
.tongue-result-page .description-item .checkbox {
  margin-left: auto;
}
.tongue-result-page .btn-group {
  margin-top: 44rpx;
  margin-bottom: 32rpx;
}
.tongue-result-page .vertify-btn,
.tongue-result-page .restart-btn {
  width: 240rpx;
  height: 72rpx;
  border-radius: 80rpx;
  background-color: #30a375;
}
.tongue-result-page .restart-btn {
  background: none;
  box-shadow: 0 0 0 2rpx #30a375 inset;
}
.tongue-result-page .back-btn {
  width: 240rpx;
  height: 72rpx;
  border-radius: 80rpx;
  margin: 0 auto;
  box-shadow: 0 0 0 2rpx #30a375 inset;
}
