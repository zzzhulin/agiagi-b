.report-slimming-page {
  padding: 34rpx 32rpx 104rpx 32rpx;
}
.report-slimming-page .body-data {
  flex: 1;
  padding: 24rpx 0 16rpx 0;
  background-color: #f9f9f9;
  border-radius: 16rpx;
}
.report-slimming-page .description-content {
  position: relative;
  padding: 40rpx 0;
}
.report-slimming-page .description-content:before, .report-slimming-page .description-content::after {
  content: "";
  position: absolute;
  left: 0;
  right: 0;
  height: 2rpx;
  background-color: #e0e6f1;
}
.report-slimming-page .description-content:before {
  top: 0;
}
.report-slimming-page .description-content::after {
  bottom: 0;
}
.report-slimming-page .summary-text text {
  font-size: 28rpx;
  line-height: 48rpx;
  color: #88888a;
}
.report-slimming-page .summary-text text.bold {
  color: #111112;
  font-weight: 600;
}
.report-slimming-page .description-text.text {
  line-height: 48rpx;
}
.report-slimming-page .fall-text {
  line-height: 1;
}
.report-slimming-page .fall-text .text {
  display: inline;
  line-height: 48rpx;
}
.report-slimming-page .dot {
  width: 40rpx;
  height: 48rpx;
}
.report-slimming-page .dot::after {
  content: "";
  width: 10rpx;
  height: 10rpx;
  background-color: #111112;
  border-radius: 50%;
}
.report-slimming-page .collapse-btn {
  margin-left: auto;
}
.report-slimming-page .rotate {
  -webkit-transform: rotate(180deg);
          transform: rotate(180deg);
}
.report-slimming-page .scheme-item {
  padding: 24rpx;
  border-radius: 24rpx;
  background-color: #f9f9f9;
}
.report-slimming-page .scheme-item .dot {
  height: 40rpx;
}
.report-slimming-page .clock-btn {
  width: 200rpx;
  height: 72rpx;
  background-color: #30a375;
  border-radius: 80rpx;
}
