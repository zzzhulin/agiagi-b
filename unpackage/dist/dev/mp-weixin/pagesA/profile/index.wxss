.health-profile-page {
  min-height: 100vh;
  padding: 8rpx 0 0 0;
  background-color: #f4f6f9;
}
.health-profile-page .family-content {
  padding: 0 32rpx;
}
.health-profile-page .family-select {
  padding: 16rpx;
  border-radius: 48rpx;
  background-color: #fff;
}
.health-profile-page .add-btn {
  width: 64rpx;
  height: 64rpx;
  margin-left: auto;
  border-radius: 50%;
  background-color: #fff;
}
.health-profile-page .tab-content {
  display: flex;
  width: auto;
  height: 80rpx;
  padding: 0 32rpx;
}
.health-profile-page .tab-content::-webkit-scrollbar {
  display: none;
}
.health-profile-page .tab-item {
  position: relative;
  height: 64rpx;
  margin-top: 16rpx;
  margin-right: 24rpx;
  flex: none;
}
.health-profile-page .tab-item:last-child {
  margin-right: 0;
}
.health-profile-page .tab-item.active::after {
  content: "";
  position: absolute;
  left: 0;
  right: 0;
  bottom: 6rpx;
  width: 48rpx;
  height: 6rpx;
  margin: 0 auto;
  border-radius: 8rpx;
  background-color: #30a375;
  transition: width 0.3s ease-in-out, -webkit-transform 0.3s ease-in-out;
  transition: transform 0.3s ease-in-out, width 0.3s ease-in-out;
  transition: transform 0.3s ease-in-out, width 0.3s ease-in-out, -webkit-transform 0.3s ease-in-out;
}
.health-profile-page .profile-container {
  flex: 1;
  margin: 24rpx 32rpx 210rpx 32rpx;
}
.health-profile-page .tabbar-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 0 32rpx env(safe-area-inset-bottom) 32rpx;
  background-color: #f4f6f9;
}
.health-profile-page .speech-btn,
.health-profile-page .upload-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 44rpx;
  background-color: #30a375;
}
